@model IEnumerable<Blogging_system.Models.Category>

@{
    ViewBag.Title = "Index Categories";
    Layout = "~/Views/Shared/BasicAdmin.cshtml";

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategory", new { id=item.CategoryId }) |
            @Html.ActionLink("Category Details", "CategoryDetails", new { id=item.CategoryId }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { id=item.CategoryId })
        </td>
    </tr>
}

</table>
